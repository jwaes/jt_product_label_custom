<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_product_label_custom" inherit_id="product.report_product_label_product">
        <xpath expr="//t[hasclass('sheet')]" position="attributes">
            <attribute name="t-if">label_layout == '2x4_99x67'</attribute>
            <attribute name="class">sheet 2x4_99x67</attribute>
        </xpath>
        <xpath expr="//t[hasclass('sheet')]" position="inside">
            <!-- Define your label content here -->
            <div class="label">
                <div class="product-name">
                    <span t-field="product.display_name"/>
                </div>
                <div class="product-barcode">
                    <img t-if="product.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=200&amp;height=50' % (barcode_type or 'Code128', product.barcode)"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
